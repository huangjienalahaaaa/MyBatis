<?xml version="1.0" encoding="UTF-8"?>

<!--添加约束：
添加约束是为了规定，只能（可以）写哪些标签。避免乱写标签
-->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.hj.mapper.UserMapper">
    <select id="findAll" resultType="cn.hj.domain.User">
		-- 编写对应的SQL语句
   		select * from user;
   	</select>
</mapper>

<!--
 1. mapper namespace="cn.tx.mapper.UserMapper"，叫名称空间，表明以后查找UserMapper接口中的findAll的方法。
2. select id="findAll"中的id属性编写的UserMapper接口中的方法的名称，固定的。
3. resultType="cn.tx.domain.User"表明的是findAll方法的返回值类型。
-->