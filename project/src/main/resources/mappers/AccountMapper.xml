<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hj.mapper.AccountMapper">

    <!-- 延迟加载 -->
    <select id="findAllLazy" resultMap="accountMap">
		select * from account
	</select>

    <!-- 通过用户的id查询账户信息 -->
    <select id="findByUid" parameterType="int" resultType="account">
		select * from account where uid = #{uid}
	</select>

    <!-- 配置映射 -->
    <resultMap type="Account" id="accountMap">
        <id column="id" property="id"/>
        <result column="uid" property="uid"/>
        <result column="money" property="money"/>


        <!-- 对User属性进行数据封装：

        * 之前学的：
            1. property  ：Account中的字段
            2. javaType  ：当前数据的类型


          * 现在延迟加载新增加的属性：
                1. column      : 给select属性中的语句传递的值(下面的?)
                2. select      : 之后要执行的SQL语句(select * from user where id = ?)
                3. fetchType   : 这个属性有2个值，lazy和eager
                    1.lazy: 延迟加载
                    2.eager:

         -->
        <association property="user" javaType="User" select="cn.hj.mapper.UserMapper.findById" column="uid">
            <id column="id" property="id"/>
            <result column="username" property="username"/>
            <result column="birthday" property="birthday"/>
            <result column="sex" property="sex"/>
            <result column="addresss" property="addresss"/>
        </association>
    </resultMap>


</mapper>











